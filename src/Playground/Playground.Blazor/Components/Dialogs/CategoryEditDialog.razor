@using System.ComponentModel.DataAnnotations
@using MudBlazor
@namespace FSH.Playground.Blazor.Components.Dialogs

<MudDialog>
    <DialogContent>
        <MudForm @ref="form" @bind-IsValid="@success">
            <MudTextField @bind-Value="code" Label="Code" Variant="Variant.Outlined" Class="mt-4" Required="true" />
            <MudTextField @bind-Value="name" Label="Category Name" Variant="Variant.Outlined" Class="mt-4" Required="true" />
            <MudTextField @bind-Value="description" Label="Description" Variant="Variant.Outlined" Lines="3" Class="mt-4" />
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit" Disabled="@(!success)">@(IsCreate ? "Create" : "Update")</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    private IMudDialogInstance MudDialog { get; set; } = default!;
    
    [Parameter] public bool IsCreate { get; set; } = true;
    [Parameter] public object Category { get; set; }

    private bool success;
    private MudForm form;
    private string code = "";
    private string name = "";
    private string description = "";

    protected override void OnInitialized()
    {
        if (!IsCreate && Category != null)
        {
            dynamic cat = Category;
            code = cat.Code ?? "";
            name = cat.Name ?? "";
            description = cat.Description ?? "";
        }
    }

    private async Task Submit()
    {
        await form.Validate();
        if (form.IsValid)
        {
            MudDialog.Close(DialogResult.Ok(new { Code = code, Name = name, Description = description }));
        }
    }

    private async Task Cancel() => MudDialog.Cancel();
}